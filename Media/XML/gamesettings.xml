  <sprite name="pinksquare" sheet="pink_sheet" frames="4">
    <frame index="0" left="0"  top="0"  right="8"  bottom="8"  />
    <frame index="1" left="8"  top="0"  right="16" bottom="8"  />
    <frame index="2" left="16" top="0"  right="24" bottom="8"  />
    <frame index="3" left="24" top="0"  right="32" bottom="8"  />
  </sprite>
  </sprites>

  <!-- sound -->
  
  <sounds path="Media\Sounds">
    <sound name="clang" file="clang.wav" instances="8"/>
	<sound name="oink" file="oink.wav" instances="8"/>
    <sound name="grunt" file="umph.wav" instances="8"/>
	<sound name="piano" file="piano.wav" instances="8"/>
  </sounds>

  <!-- levels -->
  <levels path="Media\Level">
	<sound name="reallevel" file="Test Level Export.json" instances="8"/>
    <sound name="testlevel" file="Test Level Export 1.json" instances="8"/>
  </levels>
  

